<Page
    x:Class="PPIU_Lab_3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PPIU_Lab_3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Button  Name="btnLogin" Content="Zaloguj się" Margin="472,562,0,0" VerticalAlignment="Top" Click="btnLogin_Click" />
        <TextBox Name="tbLogin"  Width="400" Height="50" TextChanged="tbLogin_TextChanged"/>
        <PasswordBox Name="tbPassword" Width="400" Height="50" Margin="0,150,0,0" PasswordChanged="tbPassword_PasswordChanged"/>
        <TextBlock Text="Login: " FontSize="20" Margin="344,338,876,332" Height="auto" Width="auto"/>
        <TextBlock Text="Hasło:" FontSize="20" Margin="343,413,863,257"  Height="auto" Width="auto" RenderTransformOrigin="0.459,0.48"/>
        <TextBlock Text="Nie posiadasz jeszcze konta?" Margin="684,519,415,180"  Height="auto" Width="auto"/>
        <Button Content="Zarejestruj się" Margin="773,562,0,0" VerticalAlignment="Top" Click="btnRegister_Click"/>
    </Grid>
</Page>
